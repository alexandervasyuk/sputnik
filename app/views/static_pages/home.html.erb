<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
    	  <script type="text/javascript">
    	  	$(function(){
				setInterval(function(){
					var numFeed = $('.feed_item').length
					
					$.ajax({
						url: '/micropost/refresh',
						data: {num: numFeed},
						success: function(data) {
							if (data != "cancel"){
						  		$('#div_feed').html(data);
						 	}
						 }
					});
				}, 10000);
			})
    	  </script>
    	
     	  <h3>Happenings</h3>
     	  <div id="div_feed">
      	  	<%= render 'shared/feed' %>
      	</div>
    </div>
  </div>
<% else %>
    <div class="row-fluid">
      <section class="span7">
        <h3>Actions > words</h3>
        <hr/>
        <p>We believe in doing. There is no 'maybe' in doing. It either done or not.</p>
        <p>We believe in actions, because actions don't lie.</p>
        <hr/>
        <h3>Crap in the system</h3>
        <p>We cut it. We optimize and minimize.</p>
        <hr/>
        <h3>We have just evolutionized the news feed.</h3>
        <p>Try it. Create a happening.</p>
      </section>
      <section class="span5">    
        <%= render template:'users/new'%> 
      </section>
    </div>
  </div>
<% end %>