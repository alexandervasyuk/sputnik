<%= stylesheet_link_tag "jquery.Jcrop.min" %>
<%= javascript_include_tag "jquery.Jcrop.min" %>

<div id="overlay" style="display: none">
	
</div>

<div id="crop_div" style="display: none">
	<div id = "file_selection">
		<h2>Select an image</h2>
        <%= form_tag '/crop', multipart: true, remote: true do%>	
			<%= file_field_tag :file%>
			<%= submit_tag "Upload", class: 'btn btn-primary', id: 'image_crop_upload'%>
		<% end %>
	</div>
	
	<div id="image_area" style="display: none">
		<img id="crop_image" src="" style="height: 550px; width: 550px">
		<%= form_tag '/crop/finish' do%>
			<%= hidden_field_tag :x%>
			<%= hidden_field_tag :y%>
			<%= hidden_field_tag :w%>
			<%= hidden_field_tag :h%>
			
			<div id="crop_btn_div">
				<%= submit_tag "Crop", class: 'btn btn-primary btn-large', id: 'crop_btn'%>
			</div>
		<% end %>
	</div>
</div>