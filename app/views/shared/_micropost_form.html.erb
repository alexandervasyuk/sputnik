  <%= form_for(@micropost) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="well well-small">
      <h3>Create a happening</h3>
      <div class="micropost_create_field">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-globe"></i></span>
          <%= f.text_field :content, placeholder: "What? Ex: food, study session, workout", class:"micropost_field", :id=>"prependedInput" %>
        </div>
      </div>

      <div class="micropost_create_field">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-map-marker"></i></span>
          <%= f.text_field :location, placeholder: "Where? Ex: asian ghetto, doe, RSF", class:"micropost_field", :id=>"prependedInput" %>
        </div>
      </div>

      <div class="micropost_create_field">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-time"></i></span>
          <% if @micropost.time.nil? %>
            <%= f.text_field :time, placeholder: "When? Ex: in 10 min, at 3 pm", class:"micropost_field", :id=>"prependedInput" %>
          <% else %>
            <%= f.text_field :time, value:@micropost.time.strftime('%I:%M %p %d %b '), class:"micropost_field", :id=>"prependedInput" %>
          <% end %>
        </div>
      </div>
      <%= f.submit "Create", class: "btn btn-primary" %>
    </div>

  <% end %>