<li id="<%= feed_item.id %>" class="feed_item">
    <% if current_user?(feed_item.user) %>
      <%= link_to content_tag('i', '', class: 'icon-trash close'), feed_item, confirm: "Are you sure you want to delete this event?", method: :delete %>
    <% end %>

    <span class="what_and_by_who">
      <span class="content"><%= feed_item.content %></span>
      <span class="initiated_text"> initiated by </span>
      <span class="initiated_by_user"><%= link_to feed_item.user.name, feed_item.user %> </span>
    </span>

    <span class="participating_feed">
      <%= render 'users/participate_form', feed_item: feed_item if signed_in? %>
    </span>
 
    <span class="map_row"><i class="icon-map-marker"></i> <%= feed_item.location %></span>

    <span><i class="icon-time"></i></span>
    <span class="time"><%= time_representation(feed_item.time, feed_item.end_time) %></span>

    <div class="participants">
      <img alt="Default_profile" class="gravatar profile_image" src="/assets/default_profile.jpg">
      <img alt="Default_profile" class="gravatar profile_image" src="/assets/default_profile.jpg">
      <img alt="Default_profile" class="gravatar profile_image" src="/assets/default_profile.jpg">
    
		<span class="details">
		  <!-- <%= link_to "view", detail_micropost_path(feed_item), class:"view"%> -->
		  <%= link_to "interested", detail_micropost_path(feed_item), class:"interested"%>
		</span>
	</div>

    
</li>
