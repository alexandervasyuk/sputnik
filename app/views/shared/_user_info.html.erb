
<% @user ||= current_user %>

<%= javascript_include_tag "crop"%>
<script src="http://cdn.jquerytools.org/1.2.7/full/jquery.tools.min.js"></script>
<%= render "shared/image_crop"%>

<%= image_tag current_user.avatar.url(:thumb), id: "profile_image", class: "img-polaroid", rel: "#crop_div"%>

<h3 id = "user_name">
	<%= link_to @user.name, @user %>
</h3>
<span>
  created <%= pluralize(@user.microposts.count, "event") %>
</span>