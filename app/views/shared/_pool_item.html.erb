<li id="<%= pool_item.id %>" class="feed_item">
    <% if current_user?(pool_item.user) %>
      <%= link_to content_tag('i', '', class: 'icon-trash close'), pool_item, confirm: "Are you sure you want to delete this event?", method: :delete %>
    <% end %>

    <span class="what_and_by_who">
      <span class="content"><%= pool_item.content %></span>
      <span class="initiated_text"> initiated by </span>
      <span class="initiated_by_user"><%= link_to pool_item.user.name, pool_item.user %> </span>
    </span>

    <span class="participating_feed">
      <%= render 'users/participate_form', feed_item: pool_item if signed_in? %>
    </span>
 
    <span class="map_row"><i class="icon-map-marker"></i> <%= pool_item.location %></span>

    <span><i class="icon-time"></i></span>
    <span class="time"><%= time_representation(pool_item.time, pool_item.end_time)%></span>

    <span class="details">
      <!-- <%= link_to "view", detail_micropost_path(pool_item), class:"view"%> -->
      <%= link_to "interested", detail_micropost_path(pool_item), class:"interested"%>
    </span>
</li>
