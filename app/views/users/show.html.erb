<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <a href="<%= user_path(@user) %>">
          <%= image_tag @user.avatar.url(:thumb), class: "gravatar profile_image" %>
        </a>
        <h1>
          <%= @user.name %>
        </h1>
          <span>
            created <%= pluralize(@user.microposts.count, "event") %>
          </span>
        </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section>
      <%= render 'shared/friends' %>
     </section>
  </aside>
  <div class="span8">
  	<%= render 'friend_action'%>
    <% if @user.microposts.any? and friends?(@user)%>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
    <h3> My happenings </h3>
    <% if @user.participations.any? %>
      <ol class="microposts">
        <%= render partial: 'shared/feed_item', collection: @user.followed_posts, as:'feed_item' %>
      </ol>
    <% end %>
  </div>
</div>