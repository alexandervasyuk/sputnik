<script type="text/javascript">
	$(function(){
		setTimeout(postsUpdate(<%=micropost.id%>, "/post/refresh", '.post_item', $('#post_feed')), 5000);
	});
</script>

<ol class="detailed_post_info">
  	<ol class="users">
  		<div class="row">
  			<div class="span8">
    			<h3>Participants</h3>
    			<div class="user_avatars">
      			<% if participants.any? %>
      				<%= render partial: 'microposts/participant', collection:participants %>
      			<% end %>
      			
      			<% if current_user.id == micropost.user.id%>
      				<a id="invite_button" class="btn btn-small" role="button" href="#invite" data-toggle="modal"><i class="icon-plus"></i></a>
      				<div id="invite" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
					  <div class="modal-header">
					    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
					    <h3 id="myModalLabel">Invite Friends</h3>
					  </div>
					  <div class="modal-body">
					  	<% if friends.any? %>
					  		<% friends.each do |friend| %>
							    <%= render partial: 'microposts/invite', locals: {friend: friend, micropost: micropost} %>
							<% end %>
					    <% end %>
					  </div>
					  <div class="modal-footer">
					  	<%= render partial: 'microposts/email_invite_form', locals: {micropost: micropost}%>
					  </div>
					</div>
      			<% end %>
        	</div>
  			</div>
		</div>
    <ol class="microposts">
      <div class="row">
        <div class="span8">
          <h3>Replies</h3>
        	
      	  	<ol class="microposts">
      	  		<div id="post_feed">
	      	  		<% if post_items.any? %>
	      				<%= render partial: 'microposts/post_item', collection: post_items %>
	      			<% end %>
      			</div>
  			</ol>
        </div>
      </div>
    </ol>
  	</ol>
</ol>
