<ol class="detailed_post_info">
  	<ol class="users">
  		<div class="row">
  			<div class="span8">
    			<h3>Participants</h3>
    			<div class="user_avatars">
      			<% if participants.any? %>
      				<%= render partial: 'microposts/participant', collection:participants %>
      			<% end %>
        	</div>
  			</div>
		</div>
    <ol class="microposts">
      <div class="row">
        <div class="span8">
          <h3>Replies</h3>
        	<% if post_items.any? %>
      	  	<ol class="microposts">
      			<%= render partial: 'microposts/post_item', collection: post_items %>
      	  	</ol>
          <% end %>
        </div>
      </div>
    </ol>
  	</ol>
</ol>
