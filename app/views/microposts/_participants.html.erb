<h4>Interested</h4>
<div class="user_avatars">
	<% if participants.any? %>
		<%= render partial: 'microposts/participant', collection:participants %>
	<% end %>
	
	<% if current_user.id == micropost.user.id%>
		<a id="invite_button" class="btn btn-small" role="button" href="#invite" data-toggle="modal"><i class="icon-plus"></i></a>
		<div id="invite" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		  <div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
			<h3 id="myModalLabel">Invite Friends</h3>
		  </div>
		  <div class="modal-body">
			<% if friends.any? %>
				<% friends.each do |friend| %>
					<%= render partial: 'microposts/invite', locals: {friend: friend, micropost: micropost} %>
				<% end %>
			<% end %>
		  </div>
		  <div class="modal-footer">
			<%= render partial: 'microposts/email_invite_form', locals: {micropost: micropost}%>
		  </div>
		</div>
	<% end %>
</div>