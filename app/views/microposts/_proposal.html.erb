<!-- Button to trigger modal -->
<a href="#myModal" role="button" class="btn" data-toggle="modal">Make a proposal</a>
 
<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

  <%= form_for(proposal) do |f| %>
		
	  <div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3 id="myModalLabel">New Proposal</h3>
	  </div>
	  <div class="modal-body">
		<%= f.text_field :content, placeholder: "suggest a new thing to do" %>
		<%= f.text_field :location, placeholder: "suggest a new place" %>
		<%= f.text_field :time, placeholder: "suggest a new time" %>
		
		<%= f.hidden_field :user_id %>
		<%= f.hidden_field :micropost_id %>
	  </div>
	  <div class="modal-footer">
		<%= f.submit "Make proposal", class: "btn btn-primary" %>
	  </div>
  
  <% end %>
  
</div>