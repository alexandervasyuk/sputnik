<%= form_for(post, remote: true, :html => { :multipart => true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
      <div class="micropost_create_field">
		<%= f.text_field :content, placeholder: "Ex: can you push it back 30 min?", class:"micropost_field", :id=>"prependedInput" %>
		
		<div class="fileupload fileupload-new" data-provides="fileupload">
			<%= f.submit "Post", class: "btn btn-primary" %>
		
			<span class="btn btn-file"><span class="fileupload-new">Add Photo</span>
			<span class="fileupload-exists">Change</span><%= f.file_field :photo %></span>
			<span class="fileupload-preview"></span>
			<a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none">Ã—</a>
		</div>
		
		
	  </div>
  <div><%= f.hidden_field :user_id%></div>
  <div><%= f.hidden_field :micropost_id%></div>
<% end %>